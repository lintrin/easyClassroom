<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myapplication.ui.communal.UserInfoActivity">

    <include layout="@layout/include_topbar_back"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_circle_white">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_user_info_avatar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop" />
    </FrameLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="学号："
            android:textColor="@color/text_color_black_default"
            android:gravity="center_vertical"
            android:layout_width="70dp"
            android:textSize="16sp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/tv_user_info_id"
            android:focusable="false"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="姓名："
            android:textColor="@color/text_color_black_default"
            android:gravity="center_vertical"
            android:layout_width="70dp"
            android:textSize="16sp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/et_username"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:text="专业："
            android:textColor="@color/text_color_black_default"
            android:gravity="center_vertical"
            android:layout_width="70dp"
            android:textSize="16sp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/et_profession"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></LinearLayout>




    <Button
        android:textColor="@color/white"
        android:text="修改"
        android:textSize="16sp"
        android:background="@color/gold"
        android:id="@+id/btn_user_info_modify"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


</LinearLayout>
