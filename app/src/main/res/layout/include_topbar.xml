<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/include_topbar_main"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/main_color"
    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/include_topbar_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_main_color"
            android:scaleType="center"
            android:src="@drawable/actionbar_btn_close" />

        <TextView
            android:id="@+id/include_topbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            tools:text="title"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/include_topbar_more"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/ripple_main_color"
            android:scaleType="center" />
    </LinearLayout>