<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_student_course"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/python"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_toRightOf="@id/iv_item_student_course"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_student_course_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ssss" />

        <TextView
            android:id="@+id/tv_item_student_course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ssss" />

        <TextView
            android:id="@+id/tv_item_student_course_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ssss" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_student_course_teacher_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="#3f51b5"
        tools:text="515465" />
</RelativeLayout>
