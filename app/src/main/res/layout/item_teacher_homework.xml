<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="78dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_teacher_homework"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/python" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_toRightOf="@id/iv_item_teacher_homework"
        android:layout_toLeftOf="@+id/tv_item_teacher_homework_teacher_score"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_teacher_homework_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ssss" />

        <TextView
            android:id="@+id/tv_item_teacher_homework_userId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="ssss" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_teacher_homework_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ssss" />

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_item_teacher_homework_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_blue"
                tools:text="提交" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_teacher_homework_teacher_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:drawableRight="@drawable/ic_navigate_next"
        android:gravity="center_vertical"
        android:textColor="#3f51b5"
        tools:text="未评分" />
</RelativeLayout>
